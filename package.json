{
  "name": "@vc4pm/mcp-server",
  "version": "3.3.1",
  "description": "MCP server for AI-guided task management with per-project configuration",
  "main": "dist/server.js",
  "bin": {
    "vc4pm-server": "dist/server.js",
    "vc4pm-setup": "bin/setup.js"
  },
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "start": "node dist/server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "ai",
    "claude",
    "cursor",
    "task-management",
    "workflow",
    "notion",
    "linear",
    "github-projects",
    "development-workflow",
    "ai-assistant"
  ],
  "author": "Christophe Bazin",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@notionhq/client": "^2.2.15"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "express": "^5.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christophe-bazin/vibe-coding-4pm.git"
  },
  "homepage": "https://github.com/christophe-bazin/vibe-coding-4pm#readme",
  "bugs": {
    "url": "https://github.com/christophe-bazin/vibe-coding-4pm/issues"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "bin/**/*",
    "README.md",
    "docs/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
